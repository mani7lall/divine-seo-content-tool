# Provider selection
LLM_PROVIDER_RESEARCH=perplexity   # perplexity|gemini|openrouter|openai|ollama|stub
LLM_PROVIDER_WRITING=openrouter

# OpenAI (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Perplexity
PERPLEXITY_API_KEY=
PERPLEXITY_MODEL=sonar-large-online  # e.g., sonar-large-online or latest online-capable model

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-pro  # e.g., gemini-2.5-pro or gemini-2.5-flash

# OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_MODEL=deepseek/deepseek-r1:free  # e.g., deepseek/deepseek-r1:free or other

# If using local models via Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Embeddings
HUGGINGFACE_API_KEY=
HF_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Search providers (choose one or more)
SERPAPI_API_KEY=
GOOGLE_CSE_API_KEY=
GOOGLE_CSE_CX=
SEARXNG_BASE_URL=

# General
MAX_WORKERS=8
HTTP_PROXY=
HTTPS_PROXY=

# Persistence
POSTGRES_DSN=postgresql+psycopg://postgres:postgres@postgres:5432/seo
REDIS_URL=redis://redis:6379/0

